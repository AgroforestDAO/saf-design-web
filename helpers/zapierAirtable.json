
// Structured Query para automação no Zapier Firestore to Airtable

{
  "select": {
    "fields": [
      {
        "fieldPath": "uid"
      }
    ]
  },
  "from": [
    {
      "collectionId": "safs",
      "allDescendants": true
    }
  ], 
  "orderBy": [
    {
      "field": {
        "fieldPath": "createdAt"
      },
      "direction": "ASCENDING"
    }
  ],
  "offset": 0,
  "limit": 10
}

